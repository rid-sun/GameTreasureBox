<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.TerminalWork.gametreasurebox.customComponents.number_moveView
        android:id="@+id/number_moveView"
        android:layout_width="410dp"
        android:layout_height="match_parent"
        android:layout_marginTop="100dp"
        app:blockCount="16"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/numberInitPosBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="284dp"
        android:layout_marginTop="28dp"
        android:text="@string/resetOrder"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/number_hrd_steps"
        android:layout_width="67dp"
        android:layout_height="22dp"
        android:layout_marginStart="56dp"
        android:gravity="center"
        android:text="@string/default_number"
        android:textSize="16sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/number_hrd_times"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/number_hrd_times"
        android:layout_width="67dp"
        android:layout_height="22dp"
        android:layout_marginTop="65dp"
        android:layout_marginEnd="160dp"
        android:gravity="center"
        android:text="@string/default_number"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/number_hrd_timesTitle"
        android:layout_width="67dp"
        android:layout_height="29dp"
        android:layout_marginEnd="160dp"
        android:gravity="center"
        android:text="@string/hrd_Times"
        android:textSize="16sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/number_hrd_stepsTitle"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/number_hrd_stepsTitle"
        android:layout_width="67dp"
        android:layout_height="29dp"
        android:layout_marginStart="56dp"
        android:layout_marginTop="36dp"
        android:gravity="center"
        android:text="@string/hrd_Steps"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>