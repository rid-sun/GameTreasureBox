<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/account_item"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/all_login_portion_color"
        android:gravity="center_vertical"
        android:paddingStart="75dp"
        android:paddingTop="10dp"
        android:paddingEnd="45dp"
        android:paddingBottom="10dp"
        android:textColor="@color/text_black"
        android:textSize="20sp" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/accountImage_item"
        android:layout_width="40dp"
        android:layout_height="20dp"
        android:layout_alignStart="@+id/account_item"
        android:layout_alignTop="@+id/account_item"
        android:layout_alignBottom="@+id/account_item"
        android:layout_marginStart="10dp"
        android:src="@drawable/logo" />

    <ImageView
        android:id="@+id/delete_item"
        android:layout_width="30dp"
        android:layout_height="20dp"
        android:layout_alignTop="@+id/account_item"
        android:layout_alignEnd="@+id/account_item"
        android:layout_alignBottom="@+id/account_item"
        android:layout_marginEnd="10dp"
        android:src="@drawable/delete_account" />

</RelativeLayout>